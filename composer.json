{
  "name": "birdsinthesun/fly_backend",
  "type": "contao-bundle",
  "description": "Fly Backend Theme for Contao 5.5",
  "license": "MIT",
  "version": "main",
  "authors": [
    {
      "name": "Monique Hahnefeld",
      "email": "info@birdsinthesun.de"
    }
  ],
  "require": {
    "php": ">=8.1",
    "contao/core-bundle": "^5.6",
    "contao/manager-bundle": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "Bits\\FlyBackendBundle\\": "src/"
    }
  },
  "extra": {
    "contao-manager-plugin": "Bits\\FlyBackendBundle\\ContaoManager\\Plugin",
    "contao-component-dir": "assets",
    "public-dir": "public"
  },
  "scripts": {
            "post-install-cmd": [
                
                "@php bin/console asset:install --relative",
                "@php vendor/bin/contao-setup",
                "cd system/themes && ln -sfn ../../vendor/birdsinthesun/fly_backend/src/Resources/contao/themes/flybackend flybackend"
            ],
            "post-update-cmd": [
                
                "@php bin/console asset:install --relative",
                "@php vendor/bin/contao-setup",
                "cd system/themes && ln -sfn ../../vendor/birdsinthesun/fly_backend/src/Resources/contao/themes/flybackend flybackend"
            ] 
  }
    
}

{
  "name": "birdsinthesun/fly_backend",
  "type": "contao-bundle",
  "description": "Fly Backend Theme for Contao 5.5",
  "license": "MIT",
  "authors": [
    {
      "name": "Dein Name",
      "email": "dein.email@example.com"
    }
  ],
  "require": {
    "php": ">=8.1",
    "contao/core-bundle": "^5.5"
  },
  "autoload": {
    "psr-4": {
      "Bits\\FlyBackendBundle\\": "src/"
    }
  },
  "extra": {
    "contao-manager-plugin": "Bits\\FlyBackendBundle\\ContaoManager\\Plugin",
    "scripts": {
            "post-install-cmd": [
                 "php bin/console asset:install --relative",
                "cd system/themes && ln -sfn ../../vendor/birdsinthesun/fly_backend/public flybackend"
            ],
            "post-update-cmd": [
                "php bin/console asset:install --relative",
                "cd system/themes && ln -sfn ../../vendor/birdsinthesun/fly_backend/public flybackend"
            ] 
        }
    }
}
